[
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "shift-k": "editor::ContextMenuPrev",
      "shift-j": "editor::ContextMenuNext"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "j": ["workspace::SendKeystrokes", "g j"],
      "k": ["workspace::SendKeystrokes", "g k"],

      "space f s": "workspace::Save",
      "space f y": "workspace::CopyRelativePath",
      "space f t": "project_panel::ToggleFocus",

      "space b p": "pane::GoBack",
      "space b n": "pane::GoForward",
      "space b d": "pane::CloseActiveItem",

      "space t t": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space f n": "project_panel::NewFile",
      "space f t": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // "ctrl-`": ""
    }
  }
]
